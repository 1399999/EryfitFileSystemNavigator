<Window x:Class="EryfitFileSystemNavigatorUI.NewFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        xmlns:local="clr-namespace:EryfitFileSystemNavigatorUI"
        mc:Ignorable="d"
        Title="New Folder Dialog" Height="120" Width="250">
    <Grid>
        <TextBlock Text="Folder Name:" FontSize="18" HorizontalAlignment="Center"/>
        <TextBox Height="40" Width="200" FontSize="20" Name="NameTextBox"/>
        <Button Content="Add" Height="35" Width="200" VerticalAlignment="Bottom" Click="NameButton_Click" />
    </Grid>
</Window>
