<Window x:Class="EryfitFileSystemNavigatorUI.FileContents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EryfitFileSystemNavigatorUI"
        mc:Ignorable="d"
        Title="FileContents" Height="450" Width="800">
    <Grid ScrollViewer.CanContentScroll="True">
        <TextBox Name="txt" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto"></TextBox>
    </Grid>
</Window>
